@model List<shoper.Models.Product>
@{
    ViewBag.Title = "Home Page";
}
<section class="header_text_edit">
    <h4><span>Suggest Products</span></h4>
</section>
<section class="main-content">
    <div class="">
        <div class="">
            <ul class="thumbnails listing-products">
                @if (Model.Count > 0)
                {
                    int imageIndex = 1;
                    foreach (var product in Model)
                    {
                        <li class="span3">
                            <div class="product-box">
                                <a href='@Url.Action("Product_Detail", "Home", new { id = product.ProductID, imageIndex = imageIndex })'>
                                    <img alt="" src="~/Content/themes/images/ladies/@(imageIndex.ToString() + ".jpg")">
                                </a><br />
                                <a href='@Url.Action("Product_Detail", "Home", new { id = product.ProductID, imageIndex = imageIndex })' class="title">@product.ProductName</a><br />
                                <a href="#" class="category">@product.Description</a>
                                <p class="price">$@product.Price</p>
                            </div>
                        </li>
                        imageIndex++;
                    }
                }
            </ul>
        </div>
    </div>
</section>